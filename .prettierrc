{
	"trailingComma": "none",
	"singleQuote": true,
	"printWidth": 100,
	"proseWrap": "always",
	"useTabs": true,
	"tabWidth": 4,
	"endOfLine": "lf",
	"plugins": [
		"prettier-plugin-svelte",
		"prettier-plugin-tailwindcss",
		"prettier-plugin-organize-imports"
	],
	"organizeImportsSkipDestructiveCodeActions": true,
	"overrides": [
		{
			"files": "*.yaml",
			"options": {
				"useTabs": false
			}
		}
	]
}
